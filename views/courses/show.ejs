<% include ../partials/header %>
<link rel="stylesheet" type="text/css" href="../public/stylesheets/main-no-background.css">

<div class="ui page equal width center aligned grid">
        <div id="courses-row" class="row">
            <div class="item">
                <img src="<%= course.thumbnail %>">
            </div>
            <div class="item">
                <div class="ui blue huge header"><%= course.title %></div>
                <div class="ui blue small header"><%= course.description %></div>
            </div>
        </div>
    </div>
<div class="ui container">
    <div class="ui divided items">
        <div class="item">
            <div class="extra">
                <% if(currentUser && course.meta.author.id.equals(currentUser._id)){ %>
                    <a href="/courses/new" class="ui right floated circular right labeled icon positive button">
                        <i class="plus icon"></i>
                            Create new Section
                    </a>
                    <a href="/courses/<%= course._id %>/edit" class="ui right floated circular right labeled icon button">
                        <i class="edit outline icon"></i>
                            Edit
                    </a>
                    <form action="/courses/<%= course._id %>?_method=DELETE" method="post">
                        <button class="ui right floated circular right labeled icon button">
                            <i class="trash alternate outline icon"></i>
                                Delete
                        </button>
                        
                    </form>
                <% } %>
                <% if(course.meta.isPublic){ %>
                    <h4 class="ui header">This<div class="ui green label">
                            Public course
                        </div> was created by
                        <%= course.meta.author.username %> <%= moment(course.meta.createdAt).fromNow() %>
                    </h4>
                <% } else { %>
                    <h4 class="ui header">This<div class="ui blue label">
                            Private Course
                        </div> was created by
                        <%= course.meta.author.username %> <%= moment(course.meta.createdAt).fromNow() %>
                    </h4>
                <% } %>
            </div>
        </div>
    </div>
    <% course.pages.forEach(function(page){ %>
        <div class="ui top attached raised blue segment">
            <div class="ui divided items">
                <div class="item">
                    <div class="image">
                        <img src="<%= course.thumbnail %>">
                    </div>
                    <div class="content">
                        <h4 class="ui header"><%= page.title %></h4>
                        <div class="meta">
                            <span><strong><%= page.meta.author.username %></strong>, <%= moment(page.meta.createdAt).fromNow() %></span>
                        </div>
                        <br>
                        <div class="description">
                            <p><%= page.description %></p>
                        </div>
                    </div>
                </div>
                <div class="item">
                    <div class="extra">
                        <a href="/courses/pages/<%= page._id %>" class="ui right floated circular right labeled icon primary button">
                            Start reading
                            <i class="right arrow icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    <% }); %>
</div>
<% include ../partials/footer %>